[user]
   	name = Niru Maheswaranathan
    email = nirum@stanford.edu

[alias]
    cm = commit -m
    st = status -s
    a = add *
	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    ignore = config --global core.excludesfile ~/.gitignore
    d = difftool

[diff]
    tool = vimdiff
    prompt = false

[core]
	excludesfile = ~/.gitignore
	editor = vim

[merge]
	tool = vimdiff

[credential]
	helper = osxkeychain
[push]
	default = simple
[filter "media"]
	required = true
	clean = git media clean %f
	smudge = git media smudge %f
[filter "lfs"]
	clean = git lfs clean %f
	smudge = git lfs smudge %f
	required = true
