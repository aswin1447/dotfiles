[alias]
    	cm = commit -m
    	st = status -s
    	a = add *
    	lg = log --color --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit
    	ignore = config --global core.excludesfile ~/.gitignore

[core]
	excludesfile = ~/.gitignore
	editor = mvim

[merge]
	tool = vimdiff

[credential]
	helper = osxkeychain
